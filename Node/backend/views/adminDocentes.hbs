<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <form method="POST" action="/admin/docentes/create" enctype="multipart/form-data">
               
                <div class="form-group">

                    <input type="text" name="nombre" placeholder="nombre del docente" class="form-control">
                </div>
                <div class="form-group">

                    <input type="text" name="apellido" placeholder="apellido del docente" class="form-control">
                </div>
                <div class="form-group">

                    <input type="text" name="cuit" placeholder="cuit" class="form-control">
                </div>
                <div class="form-group">
                    <input type="file" name="imagen" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">Registrar</button>


            </form>
        </div>
    </div>
</div>