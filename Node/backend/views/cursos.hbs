<div class="container justify-content-center">
    <div class="row">
        {{#each cursos}}
        <div class="col-4 ">
            <div class="card text-center" style="width: 18rem;">
                <img src="./../images/descarga.png" class="card-img-top" alt="Foto programador web avanzado">
                    <div class="card-body">
                        <h5 class="card-title">{{nombre}}</h5>
                        <p class="card-text">{{nombreCategoria}}</p>
                        <a href="/cursos/{{id}}" class="btn btn-primary btn-block">Ver Mas</a>
                    </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>