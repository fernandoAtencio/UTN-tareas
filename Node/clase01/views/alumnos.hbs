{{!-- SPA (Single Page Application) --}}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Alumnos y Docentes</h1>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-primary">Profe : {{profe.nombre}}</h2> {{!--// se interpola una variable--}}
            <h3>{{curso}}</h3>
        </div>

        <div class="col-12">
            <h2>Alumnos : </h2>
            <table class="table table-hover">
                <thead>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th></th>
                </thead>
                <tbody>
                    {{#each alumnos}} {{!--// recorre el vector alumnos--}}
                    <tr>
                        <td>{{id}}</td> {{!--// agrega las propiedades del objeto a las que ya accedi√≥--}}
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>-</td>
                    </tr>
                    {{/each}} {{!--// cierra el for each--}}

                </tbody>
            </table>

        </div>
    </div>
</div>